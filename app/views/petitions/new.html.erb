<div>
  <div class="container padded">
    <h1>Create a new petition</h1>
    <%= form_for :petition, url: petitions_path do |f| %>

      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </p>

      <p>
        <%= f.submit %>
      </p>

    <% end %>
  </div>
</div>
